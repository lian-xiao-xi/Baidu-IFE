@import '../common/base.styl'
@import '../common/mixin.styl'
@import '../common/variable.styl'

.checkbox-group 
  display: inline-block;

input 
  outline: none 
  color: inherit 

.hide 
  display: none

.area 
  margin-bottom: 20px;
.table-wrapper 
  margin-bottom: 20px;
.data-table
  font-size: 18px
  tr>td, tr>th 
    border: 1px solid;
    text-align: center;
    vertical-align: middle;
    white-space: nowrap
    padding: 6px 10px
  .tbody-tr 
    .show:hover + .img
      display: initial 
    input 
      display: none
      width: 150px
      text-align: center
      border: 1px solid #333333
      background-color: inherit 
      &.block
        display: block
    .img
      display: none
      margin-left: 6px
      
.btn-group 
  text-align: center 
  .btn 
    display: inline-block;
    margin: 0;
    padding: 6px 12px;
    border: 1px solid #ccc;
    background-color: #fff;
    line-height: 1.42857143;
    color: #333;
    font-size: 1.4rem;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    border-radius: 4px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    margin: 0 5px
  .btn-save 
    color: #ffffff 
    background-color: #5cb85c
    border-color: #4cae4c
    &:hover 
      color: #fff;
      background-color: #449d44;
      border-color: #398439;
  .btn-esc 
    color: #ffffff
    background-color: #d9534f
    border-color: #d43f3a
    &:hover 
      color: #fff;
      background-color: #c9302c;
      border-color: #ac2925;

